							            android:textColor="#000000"
							            android:gravity="center_horizontal"
							            android:textSize="15dp"
							            android:paddingBottom="30dp"
							            android:textStyle="bold"
							             />
    
   </LinearLayout> 
   
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
							     <TextView
							            android:id="@+id/textviewajoutfr"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							            android:text="FR:"
							            android:textColor="#0000FF"
							            android:textSize="20dp"
							            android:textStyle="bold" 
							            android:paddingBottom="30dp"
							            />
							     
							     <EditText
							                android:id="@+id/edittextajoutfr"
								            android:layout_width="wrap_content"
								            android:layout_height="wrap_content"
								            android:layout_weight="20"
								            android:hint="Votre mot FranÃ§ais... "
								            android:inputType="text" />
	 </LinearLayout>
							     
    
  
    



<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
							     <TextView
							            android:id="@+id/textviewajoutwl"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
							            android:text="WL:"
							            android:textColor="#0000FF"
							            android:textSize="20dp"
							            android:textStyle="bold" 
							            android:paddingBottom="30dp"
							            />
							     
							     <EditText
								            android:id="@+id/edittextajoutwl"
								            android:layout_width="wrap_content"
								            android:layout_height="wrap_content"
								            android:layout_weight="20"
								            android:hint="Votre mot Wolof... "
								            android:inputType="text" />
</LinearLayout>


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
			     <Button
			            android:id="@+id/ajoutermot"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="30"
			            android:text="Ajouter un Mot" />			
    
    
    	     
</LinearLayout>


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
			     <Button
			            android:id="@+id/ajouterretour"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="30"
			            android:text="Menu Principal" />			
    
    
    	     
</LinearLayout>







							     
    
 
    
    
    
    

